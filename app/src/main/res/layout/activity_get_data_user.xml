<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.extraaedge.contentsaveandget.homeActivity.GetDataUserActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGetUserDataList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_v60"
        android:layout_marginTop="@dimen/margin_v8"
        android:layout_marginRight="@dimen/margin_v8"
        android:layout_marginLeft="@dimen/margin_v8"/>

    <Button
        android:id="@+id/btAddNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_user"
        android:textAllCaps="false"
        android:layout_margin="@dimen/margin_v8"
        android:textSize="@dimen/button_large_20dip"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
