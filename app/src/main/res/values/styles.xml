<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--editText-->
    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_v8</item>
        <item name="android:padding">@dimen/padding_v16</item>
        <item name="android:textSize">@dimen/edittext_normal_16dip</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <!--button-->
    <style name="customButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_v8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_large_20dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <!--textView hint-->
    <style name="myStyle_hintText">
        <item name="android:layout_width">@dimen/textsize_v0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_v4</item>
        <item name="android:textSize">@dimen/textsize_normal_16dip</item>

    </style>

    <!--TextView-->
    <style name="myText">
        <item name="android:layout_width">@dimen/textsize_v0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_v4</item>
        <item name="android:textSize">@dimen/textsize_normal_16dip</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

</resources>
